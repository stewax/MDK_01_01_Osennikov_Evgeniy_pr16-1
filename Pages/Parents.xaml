<Page x:Class="Submission_of_Applications_Осенников.Pages.Parents"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Осенников.Pages"
      mc:Ignorable="d" 
            MinHeight="490" MinWidth="840"
      Title="Parents">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,1002" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top"
                   Width="40" Source="/Images/aviat.png"/>
            <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left"
                   Margin="55,24,0,0" VerticalAlignment="Top"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0"
                   VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
        </Grid>
        <Grid Margin="0,55,0,0">
            <Label Content="Сведения о родителях (законных представителях):" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="Если родитель один, заполнить данные на одного родителя" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                   Margin="18,31,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <Label Content="Мать (или законный представитель):" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
            <Label Content="Фамилия, имя, отчество (полностью)" HorizontalAlignment="Left" 
               Margin="10,87,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_FIOMom" Height="24" Width="820" Margin="0,118,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Дата рождения:" HorizontalAlignment="Left" 
               Margin="10,147,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DateofBirthMom" Height="24" Width="820" Margin="0,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Место работы:" HorizontalAlignment="Left" 
               Margin="10,207,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_PlaceWorkMom" Height="24" Width="820" Margin="0,238,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Должность:" HorizontalAlignment="Left" 
               Margin="10,267,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_StelleMom" Height="24" Width="820" Margin="0,298,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Место жительства:" HorizontalAlignment="Left" 
                   Margin="10,327,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_PlaceLiveMom" Height="24" Width="820" Margin="0,358,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Домашний телефон:" HorizontalAlignment="Left" 
                Margin="10,387,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_HomeNumberMom" Height="24" Width="400" Margin="10,441,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Мобильный телефон:" HorizontalAlignment="Right" 
                Margin="0,387,282,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_MobileNumberMom" Height="24" Width="400" Margin="0,441,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="(при наличии)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                Margin="18,413,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <Label Content="(при наличии)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                Margin="440,413,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <CheckBox x:Name="ConfirmMom" Content="Настоящим подтверждаю, что персональные данные на третьих лиц не предоставляются" HorizontalAlignment="Left" Margin="10,470,0,0" VerticalAlignment="Top"/>

            <Label Content="Отец (или законный представитель):" HorizontalAlignment="Left" Margin="10,507,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
            <Label Content="Фамилия, имя, отчество (полностью)" HorizontalAlignment="Left" 
                Margin="10,535,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_FIODad" Height="24" Width="820" Margin="0,566,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Дата рождения:" HorizontalAlignment="Left" 
                Margin="10,595,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_DateofBirthDad" Height="24" Width="820" Margin="0,626,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Место работы:" HorizontalAlignment="Left" 
                Margin="10,655,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_PlaceWorkDad" Height="24" Width="820" Margin="0,686,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Должность:" HorizontalAlignment="Left" 
                Margin="10,715,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_StelleDad" Height="24" Width="820" Margin="0,746,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Место жительства:" HorizontalAlignment="Left" 
                Margin="10,775,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_PlaceLiveDad" Height="24" Width="820" Margin="0,806,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <Label Content="Домашний телефон:" HorizontalAlignment="Left" 
                Margin="10,835,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_HomeNumberDad" Height="24" Width="400" Margin="10,889,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Мобильный телефон:" HorizontalAlignment="Right" 
                Margin="0,835,282,0" VerticalAlignment="Top"/>
            <TextBox x:Name="tb_MobileNumberDad" Height="24" Width="400" Margin="0,889,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="(при наличии)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                Margin="18,861,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <Label Content="(при наличии)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                Margin="440,861,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <CheckBox x:Name="ConfirmDad" Content="Настоящим подтверждаю, что персональные данные на третьих лиц не предоставляются" HorizontalAlignment="Left" Margin="10,918,0,0" VerticalAlignment="Top"/>

            <Button Content="Отправить" Click="Next" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="150" Height="25"/>
            <Button Content="Назад" Click="Back" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="150" Height="25"/>
        </Grid>
    </Grid>
</Page>
