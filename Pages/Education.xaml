<Page x:Class="Submission_of_Applications_Осенников.Pages.Education"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Submission_of_Applications_Осенников.Pages"
      mc:Ignorable="d" 
            MinHeight="490" MinWidth="840"
      Title="Education">

    <Grid Background="#F8F9FA">
        <Grid Margin="0,0,0,430" Background="White">
            <Image HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top"
               Width="40" Source="/Images/aviat.png"/>
            <Label Content="Пермского авиационного техникума им. А.Д. Швецова" HorizontalAlignment="Left"
               Margin="55,24,0,0" VerticalAlignment="Top"/>
            <Label Content="Электронная приемная компания" HorizontalAlignment="Left" Margin="55,1,0,0"
               VerticalAlignment="Top" FontWeight="Bold" FontSize="19"/>
        </Grid>
        <Grid Margin="0,60,0,0">
            <Label Content="Сведения об образовании" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label Content="База:" HorizontalAlignment="Left" 
               Margin="10,41,0,0" VerticalAlignment="Top"/>
            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
               Margin="20,67,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <RadioButton Content="9 классов" x:Name="nine_class" Margin="22,91,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="EducateClass"/>
            <RadioButton Content="11 классов" x:Name="eleven_class" Margin="22,106,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="EducateClass"/>
            <RadioButton Content="СПО" x:Name="SPO" Margin="22,123,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="EducateClass"/>
            <RadioButton Content="ВПО" x:Name="VPO" Margin="22,140,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="EducateClass"/>
            <Label Content="Выберите один из вариантов:" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
               Margin="18,156,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <RadioButton Content="Атестат" x:Name="Atestat" Margin="22,180,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="AtestatOrDiplom"/>
            <RadioButton Content="Диплом" x:Name="Diplom" Margin="22,195,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" GroupName="AtestatOrDiplom"/>
            <Label Content="Серия и номер документа об образовании:" HorizontalAlignment="Left" Margin="10,215,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="SerialAndNumberEduc" Height="24" Width="370" Margin="10,246,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label Content="Средний балл (до сотых):" HorizontalAlignment="Right" Margin="0,215,231,0" VerticalAlignment="Top"/>
            <TextBox x:Name="AvgScore" Height="24" Width="370" Margin="0,246,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Label Content="Прикрепите сканы страниц документа об  образовании  с ФИО, наименованием образовательной организации и оценками" HorizontalAlignment="Left"
                   Margin="10,275,0,0" VerticalAlignment="Top"/>
            <Label Content="(Формат документов должен быть PNG, JPEG или PDF, а максимальный размер каждого файла 5 МБ)" HorizontalAlignment="Left" Background="{x:Null}" FontSize="10"
                   Margin="18,306,0,0" VerticalAlignment="Top" Foreground="Red"/>
            <TextBox x:Name="Link" Height="24" Margin="20,331,90,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
            <Button Content="Выбрать..." Click="ChooseImage" HorizontalAlignment="Right" Margin="0,331,10,0" VerticalAlignment="Top" Width="75" Height="25"/>
            <Button Content="Продолжить" Click="Next" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="150" Height="25"/>
            <Button Content="Назад" Click="Back" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="150" Height="25"/>
        </Grid>
    </Grid>
</Page>
